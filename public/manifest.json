{
  "manifest_version": 3,
  "version": "0.3.0",
  "name": "MeTLDR",
  "description": "Local and private AI assistant powered by Ollama with offline dictionary",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'; media-src 'self';"
  },
  "action": {
    "default_title": "metldr - click to open"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "default.mp4",
        "light.mp4",
        "cyberpunk_2077.mp4",
        "catppuccin.mp4",
        "gruvbox.mp4"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
